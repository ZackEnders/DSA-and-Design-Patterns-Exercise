{
  "name": "dsa-and-design-patterns",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run $npm_config_lang --week=$npm_config_week",
    "js": "nodemon --watch src/week-$npm_config_week --ext mjs --exec node src/week-$npm_config_week/js/index.mjs",
    "ts": "nodemon --watch src/week-$npm_config_week --ext ts --exec ts-node src/week-$npm_config_week/ts/index.ts",
    "format": "prettier --write \"**/*.{ts,md,json}\"",
    "update": "pnpm update --latest --recursive -i",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:push": "git push --follow-tags origin main"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write --concurrent false"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
